---
import Layout from '../../layouts/Layout.astro';
---

<title>Contact</title>
<Layout>
    <h2 class="text-4xl font-hammersmith text-center mt-6 mb-6">Formulaire de contact</h2>
    <form id="myForm">
        <div class="flex flex-col items-center justify-center ml-5">
            <div class="flex flex-col items-center">
                <p class="text-[#030303] font-fredoka text-lg font-normal mt-2 mb-4 ml-2 mr-2">Nom :</p>
                <textarea id="nom" class="bg-gray-300 border-none text-black font-fredoka text-sm font-normal mt-[-8px]" id="textArea" name="textArea" rows="1" cols="100%" placeholder="Entrez votre nom ici..."></textarea>
                <hr class="w-[100%] mt-1">
            </div>
            <div class="flex flex-col items-center">
                <p class="text-[#030303] font-fredoka text-lg font-normal mt-2 mb-4 ml-2 mr-2">Prénom :</p>
                <textarea id="prenom" class="bg-gray-300 border-none text-black font-fredoka text-sm font-normal mt-[-8px]" id="textArea" name="textArea" rows="1" cols="100%" placeholder="Entrez votre prénom ici..."></textarea>
                <hr class="w-[100%] mt-1">
            </div>
            <div class="flex flex-col items-center">
                <p class="text-[#030303] font-fredoka text-lg font-normal mt-2 mb-4 ml-2 mr-2">Numéro de Téléphone :</p>
                <textarea id="numero" class="bg-gray-300 border-none text-black font-fredoka text-sm font-normal mt-[-8px]" id="textArea" name="textArea" rows="1" cols="100%" placeholder="Entrez votre numéro ici..."></textarea>
                <hr class="w-[100%] mt-1">
            </div>
            <div class="flex flex-col items-center">
                <p class="text-[#030303] font-fredoka text-lg font-normal mt-2 mb-4 ml-2 mr-2">Adresse mail :</p>
                <textarea id="email" class="bg-gray-300 border-none text-black font-fredoka text-sm font-normal mt-[-8px]" id="textArea" name="textArea" rows="1" cols="100%" placeholder="Entrez votre adresse mail ici..."></textarea>
                <hr class="w-[100%] mt-1">
            </div>
            <div class="flex flex-col items-center justify-center">
                <p class="text-[#030303] font-fredoka text-lg font-normal mt-2 mb-4 ml-2 mr-2">Message supplémentaire :</p>
                <textarea id="msg" class="bg-gray-300 border-none text-black font-fredoka text-sm font-normal mt-[-8px]" id="textArea" name="textArea" rows="3" cols="100%" placeholder="Entrez votre adresse ici..."></textarea>
                <hr class="w-[100%] mt-1 mb-6">
            </div>
            <button type="button" class="inline-flex items-center gap-6 px-4 py-3 rounded-xl bg-[#FE603F] border-2 mb-6">
                    <span class="text-[#181818] font-Fredoka text-lg font-bold uppercase">Envoyer</span>
            </button>
        </div>
    </form>
</Layout>