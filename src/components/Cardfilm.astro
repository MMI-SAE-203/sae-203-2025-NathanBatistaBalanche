---
const { nom, datediffusion, duree, langue, production, imgUrl, id, idinvite} = Astro.props;
import { formatDate } from '../js/backend.mjs';
---
<div class="border bg-stone-900 rounded-lg shadow-md p-4 m-4 max-w-sm w-[80%]">
    <div class="p-4">
        <img src={imgUrl} alt={nom} class="border border-white w-full h-auto object-cover rounded-lg mb-4" />
        <h2 class="text-2xl text-[#FE603F] font-bold mb-2 font-hammersmith">{nom}</h2>
        <p class="text-[#E89352] font-hammersmith"><strong>Diffusé le :</strong> {formatDate(datediffusion)}</p>
        <p class="text-[#E89352] font-hammersmith"><strong>Durée :</strong> {duree}</p>
        <p class="text-[#E89352] font-hammersmith"><strong>Langue originale :</strong> {langue}</p>
        <p class="text-[#E89352] font-hammersmith"><strong>Produit par :</strong> {production}</p>
        <a class="text-[#E89352] font-hammersmith underline" href={`/programmation/${id}/`}>Voir plus</a>    
    </div>
</div>